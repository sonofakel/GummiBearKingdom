@model GummiBearKingdom.Models.Product

@{
    ViewData["Title"] = "Edit product";
}

<div class="vh-100 dt w-100 tc bg-dark-gray " style="background:url(https://www.toptal.com/designers/subtlepatterns/patterns/round.png);">
<div class="container tc black-70 ">

<h1 class="f1 f-headline-l fw1 i black-70 athelas">Edit @Html.DisplayFor(model => model.Name)</h1>



@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.ProductId)
    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name)
    @Html.LabelFor(model => model.Cost)
    @Html.EditorFor(model => model.Cost)
    @Html.LabelFor(model => model.CountryOfOrigin)
    @Html.EditorFor(model => model.CountryOfOrigin)

    <input type="submit" value="Save" class="btn btn-default" />

}

		<h5>@Html.ActionLink("Go back to product list", "Index")</h5>
